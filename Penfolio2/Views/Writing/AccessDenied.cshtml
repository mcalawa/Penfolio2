@{
    ViewData["Title"] = "Access Denied";
}

<h1>Access Denied</h1>

<p>@ViewBag.ErrorString</p>

@if (ViewBag.FriendRequest || ViewBag.AccessRequest || (ViewBag.RepresentationRequest && ViewBag.VerifiedPublisher))
{
    <hr />
}

@if (ViewBag.FriendRequest)
{
    <h4>Send a Friend Request</h4>
    @await Component.InvokeAsync("Notification", new { viewName = "CreateFriendRequest", id = ViewBag.AccessPermissionId })
}

@if (ViewBag.AccessRequest)
{
    @await Component.InvokeAsync("Notification", new { viewName = "CreateAccessRequest", id = ViewBag.AccessPermissionId })
}

@if (ViewBag.RepresentationRequest)
{
    @await Component.InvokeAsync("Notification", new { viewName = "CreateRepresentationRequest", id = ViewBag.AccessPermissionId })
}
